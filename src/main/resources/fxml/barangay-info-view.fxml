<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<ScrollPane xmlns="http://javafx.com/javafx/13"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.barangay.presentation.controllers.BarangayInfoController"
    fitToWidth="true"
    hbarPolicy="NEVER"
    vbarPolicy="AS_NEEDED">
    <content>
        <VBox spacing="18">
            <padding>
                <Insets top="20" right="24" bottom="24" left="24" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <children>
                        <Label text="Barangay Information">
                            <styleClass>
                                <String fx:value="section-title" />
                            </styleClass>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lastUpdatedLabel" text="Last updated" />
                        <Button fx:id="saveButton" text="Save Changes" onAction="#handleSave" />
                    </children>
                </HBox>

                <Label fx:id="viewOnlyLabel"
                    text="View-only mode. Contact an administrator to update."
                    visible="false" managed="false" />

                <Label fx:id="statusMessageLabel" text="" />

                <GridPane hgap="12" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="140" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <children>
                        <Label GridPane.rowIndex="0" text="Barangay Name" />
                        <TextField fx:id="barangayNameField" GridPane.rowIndex="0"
                            GridPane.columnIndex="1" />

                        <Label GridPane.rowIndex="1" text="City / Municipality" />
                        <TextField fx:id="cityField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label GridPane.rowIndex="2" text="Province" />
                        <TextField fx:id="provinceField" GridPane.rowIndex="2"
                            GridPane.columnIndex="1" />

                        <Label GridPane.rowIndex="3" text="Region" />
                        <TextField fx:id="regionField" GridPane.rowIndex="3"
                            GridPane.columnIndex="1" />

                        <Label GridPane.rowIndex="4" text="Full Address" />
                        <TextArea fx:id="addressField" GridPane.rowIndex="4"
                            GridPane.columnIndex="1" prefRowCount="3" wrapText="true" />

                        <Label GridPane.rowIndex="5" text="Contact Number" />
                        <TextField fx:id="contactField" GridPane.rowIndex="5"
                            GridPane.columnIndex="1" />

                        <Label GridPane.rowIndex="6" text="Email" />
                        <TextField fx:id="emailField" GridPane.rowIndex="6"
                            GridPane.columnIndex="1" />

                        <Label GridPane.rowIndex="7" text="Seal Path" />
                        <HBox spacing="8" GridPane.rowIndex="7" GridPane.columnIndex="1">
                            <children>
                                <TextField fx:id="sealField" HBox.hgrow="ALWAYS" />
                                <Button fx:id="browseSealButton" text="Browse"
                                    onAction="#handleBrowseSeal" />
                            </children>
                        </HBox>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </content>
</ScrollPane>