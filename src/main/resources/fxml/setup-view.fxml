<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:controller="com.barangay.presentation.controllers.SetupController"
    xmlns="http://javafx.com/javafx/13"
    xmlns:fx="http://javafx.com/fxml/1"
    alignment="CENTER">
    <children>
        <Group>
            <VBox alignment="CENTER"
                spacing="16"
                maxWidth="520"
                prefWidth="-1"
                prefHeight="-1"
                fillWidth="true"
                styleClass="auth-pane">
                <padding>
                    <Insets top="36" right="36" bottom="36" left="36" />
                </padding>
                <children>
                    <Label text="Barangay Management System" styleClass="title" />
                    <Label text="Initial Setup" styleClass="subtitle" />
                    <Label text="* Required field" styleClass="hint" />
                    <VBox spacing="12" fillWidth="true">
                        <children>
                            <VBox spacing="6" fillWidth="true">
                                <Label text="Username" styleClass="required-field-label"
                                    contentDisplay="RIGHT" graphicTextGap="4">
                                    <graphic>
                                        <Label text="*" styleClass="required-asterisk" />
                                    </graphic>
                                </Label>
                                <TextField fx:id="usernameField" promptText="Enter username"
                                    maxWidth="Infinity" />
                            </VBox>
                            <VBox spacing="6" fillWidth="true">
                                <Label text="Password" styleClass="required-field-label"
                                    contentDisplay="RIGHT" graphicTextGap="4">
                                    <graphic>
                                        <Label text="*" styleClass="required-asterisk" />
                                    </graphic>
                                </Label>
                                <PasswordField fx:id="passwordField" promptText="Create password"
                                    maxWidth="Infinity" />
                            </VBox>
                        </children>
                    </VBox>
                    <Label fx:id="passwordHintLabel" styleClass="hint" wrapText="true"
                        maxWidth="Infinity" />
                    <Button fx:id="setupButton" text="Complete Setup" onAction="#handleSetupAction"
                        maxWidth="Infinity" />
                    <Label fx:id="messageLabel" styleClass="message-label" wrapText="true"
                        maxWidth="Infinity" />
                </children>
            </VBox>
        </Group>
    </children>
</StackPane>