<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="com.barangay.presentation.controllers.MainLayoutController"
    xmlns="http://javafx.com/javafx/13"
    xmlns:fx="http://javafx.com/fxml/1"
    prefWidth="1200" prefHeight="720">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="16" styleClass="app-header">
            <padding>
                <Insets top="16" right="24" bottom="16" left="24" />
            </padding>
            <children>
                <ImageView fx:id="barangaySealImage" fitHeight="54" fitWidth="54"
                    preserveRatio="true" pickOnBounds="true" visible="false" managed="false" />
                <Label fx:id="barangayNameLabel" styleClass="header-title" text="Barangay" />
                <HBox alignment="CENTER_RIGHT" spacing="8" styleClass="header-user"
                    BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <Label text="Signed in as" styleClass="header-caption" />
                        <Label fx:id="currentUserLabel" styleClass="header-username" text="user" />
                        <Label text="Â·" styleClass="header-caption" />
                        <Label fx:id="currentRoleLabel" styleClass="header-role" text="role" />
                        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                            styleClass="text-button" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <left>
        <VBox fx:id="navigationBox" spacing="8" styleClass="nav-pane">
            <padding>
                <Insets top="20" right="16" bottom="20" left="16" />
            </padding>
            <children>
                <Button fx:id="dashboardButton" text="Dashboard" onAction="#openDashboard"
                    maxWidth="Infinity" />
                <Button fx:id="usersButton" text="User Management" onAction="#openUsers"
                    maxWidth="Infinity" />
                <Button fx:id="residentsButton" text="Resident Management" onAction="#openResidents"
                    maxWidth="Infinity" />
                <Button fx:id="documentsButton" text="Document Issuance" onAction="#openDocuments"
                    maxWidth="Infinity" />
                <Button fx:id="documentRequestsButton" text="Document Requests"
                    onAction="#openDocumentRequests" maxWidth="Infinity" />
                <Button fx:id="voterApplicationsButton" text="Voter Applications"
                    onAction="#openVoterApplications" maxWidth="Infinity" />
                <Button fx:id="officialsButton" text="Officials Directory" onAction="#openOfficials"
                    maxWidth="Infinity" />
                <Button fx:id="barangayInfoButton" text="Barangay Information"
                    onAction="#openBarangayInfo" maxWidth="Infinity" />
                <Button fx:id="profileButton" text="Profile" onAction="#openProfile"
                    maxWidth="Infinity" />
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane" />
    </center>
</BorderPane>