<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Group?>

<StackPane fx:controller="com.barangay.presentation.controllers.LoginController"
  xmlns="http://javafx.com/javafx/13"
  xmlns:fx="http://javafx.com/fxml/1"
  alignment="CENTER">
  <children>
    <Group>
      <VBox alignment="CENTER"
        spacing="16"
        maxWidth="520"
        prefWidth="-1"
        prefHeight="-1"
        fillWidth="true"
        styleClass="auth-pane">
        <padding>
          <Insets top="36" right="36" bottom="36" left="36" />
        </padding>
        <children>
          <Label fx:id="bannerLabel" styleClass="banner" wrapText="true" maxWidth="Infinity"
            managed="false" visible="false" />
          <Label text="Barangay Management System" styleClass="title" />
          <Label text="Sign In" styleClass="subtitle" />
          <VBox spacing="12" fillWidth="true">
            <children>
              <VBox spacing="6" fillWidth="true">
                <Label text="Username" />
                <TextField fx:id="usernameField" promptText="Enter username" maxWidth="Infinity" />
              </VBox>
              <VBox spacing="6" fillWidth="true">
                <Label text="Password" />
                <PasswordField fx:id="passwordField" promptText="Enter password" maxWidth="Infinity" />
              </VBox>
            </children>
          </VBox>
          <Button fx:id="loginButton"
            text="Login"
            onAction="#handleLoginAction"
            maxWidth="Infinity" />
          <Label fx:id="messageLabel" styleClass="message-label" wrapText="true" maxWidth="Infinity" />
        </children>
      </VBox>
    </Group>
  </children>
</StackPane>